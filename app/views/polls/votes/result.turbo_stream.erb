<%= turbo_stream.replace "poll_result", partial: 'polls/result', locals: { poll: @poll } %>

<%= turbo_stream.replace "vote_form" do %>
  <%= turbo_frame_tag "vote_form", src: new_poll_vote_path(@poll), loading: :lazy, autoscroll: true, data: { autoscroll_behavior: 'start' } %>
<% end %>

<%= turbo_stream.update "flash" do %>
  <%= @message %>
<% end %>
